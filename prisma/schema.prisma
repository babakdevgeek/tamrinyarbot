generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
    id         Int        @id @default(autoincrement())
  telegramId BigInt     @unique
  exercises  Exercise[]
  firstname  String
  username   String?
  currentStep String?   // null یعنی هیچ فرایندی در جریان نیست
  tempExerciseName String? // ذخیره موقت اسم حرکت
  tempSets   Int?      // ذخیره موقت تعداد ست
  tempReps   String?      // ذخیره موقت تعداد تکرار
  tempWeight Float?    // ذخیره موقت وزن
  createdAt  DateTime   @default(now())
}

model Exercise {
  id        Int      @id @default(autoincrement())
  name      String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  sets      Int
  reps      String
  weight    Float    // وزنه
}

